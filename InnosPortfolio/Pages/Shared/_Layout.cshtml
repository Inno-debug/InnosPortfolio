<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InnosPortfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InnosPortfolio.styles.css" asp-append-version="true" />
    <!-- adding event listner to device lightmode default setting -->
    <script>
        (() => {
            const savedTheme = localStorage.getItem('theme');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const theme = savedTheme || (prefersDark ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', theme);
        })();
    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid position-relative">
                <!-- Hamburger (left on mobile only) -->
                <button class="navbar-toggler d-block d-sm-none " id="mainNav" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Centered nav links (desktop & mobile collapse) -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav d-flex flex-column flex-sm-row text-center gap-4">
                        <li class="nav-item">
                            <a class="nav-link fs-4" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4" asp-area="" asp-page="/Privacy">Work</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4" asp-area="" asp-page="/Privacy">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4" asp-area="" asp-page="/Privacy">Contact</a>
                        </li>
                    </ul>
                </div>

                <!-- Moon icon (always top right) -->
                <button id="themeToggle" class="btn btn-outline-secondary position-absolute end-0 hamburger-default" aria-label="Toggle dark mode">
                    🌙
                </button>
            </div>
        </nav>
        <!-- adding event listner to navbar toggle -->
        <script>
            const moonButton = document.getElementById('themeToggle');
            const navCollapse = document.getElementById('mainNav');

            function applyMoonPosition() {
              // Always absolutely position it in the top-right corner
              moonButton.style.position = 'absolute';
              moonButton.style.right = '12px';

              if (window.innerWidth >= 576) {
                // Desktop
                moonButton.style.top = '15%'; // very top
              } else {
                // Mobile
                moonButton.style.top = '0'; // push down if needed
              }
            }

            // Collapse events
            navCollapse.addEventListener('shown.bs.collapse', applyMoonPosition);
            navCollapse.addEventListener('hidden.bs.collapse', applyMoonPosition);

            // Screen size changes
            const mq = window.matchMedia("(min-width: 576px)");
            mq.addEventListener("change", applyMoonPosition);

            // Initial run
            applyMoonPosition();
        </script>
        <!-- adding event listner to moon toggle -->
        <script>
            const themeToggle = document.getElementById('themeToggle');

            themeToggle.addEventListener('click', () => {
                const current = document.documentElement.getAttribute('data-theme');
                const next = current === 'dark' ? 'light' : 'dark';
                document.documentElement.setAttribute('data-theme', next);
                localStorage.setItem('theme', next);
            });
        </script>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - InnosPortfolio - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
